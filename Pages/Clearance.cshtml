@page
@model IdentityApp.Pages.ClearanceModel
@{
    Func<string, bool> HasClearance = (string leve) => User.HasClaim(ApplicationClaimTypes.SecurityClearance, leve);
}

<table class="table table-sm table-striped table-bordered">
    <thead>
    <tr>
        <th>Clearance Level</th>
        <th>Granted</th>
    </tr>
    </thead>
    <tbody>
    <tr><td>Secret</td><td>@HasClearance("Secret")</td></tr>
    <tr><td>Very Secret</td><td>@HasClearance("VerySecret")</td></tr>
        <tr><td>Super Secret</td><td>@HasClearance("SuperSecret")</td></tr>
    </tbody>
</table>
