@model (string workflow, string theme)

@{
    Func<string, string> getClass = (string feature) => feature != null && feature.Equals(Model.workflow) ? "active" : "";
}
<div class="d-grid gap-2">
    <a class="btn btn-@Model.theme @getClass("Dashboard")" asp-page="Dashboard">
        Dashboard
    </a>

    <a class="btn btn-success @getClass("List")" asp-page="View" asp-route-id="">
        List Users
    </a>
</div>